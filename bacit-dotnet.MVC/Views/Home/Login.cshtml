@{
    var returnUrl = ViewData["returnUrl"] as string;
    var error = TempData["error"] as string;
}
<h2>Log inn</h2>
@if (!string.IsNullOrEmpty(error)){
    <h2 class="alert-danger" >@error</h2>
}
<form action="/login?ReturnUrl=@System.Net.WebUtility.UrlDecode(returnUrl)" method="post">
    <input type="text" name="EmployeeNumber" placeholder="EmployeeNumber" />
    <input type="password" name="Password" placeholder="Password" />
    <input type="submit" value="log inn" />
</form>