
@using bacit_dotnet.MVC.Models.Users
@model UserEntity

<form asp-action="AddUser" asp-controller="Users" method="post">  
    <h1>Registrer bruker</h1><br />

    <label for="EmployeeNumber">Ansattnummer</label><br />
    <input class="form-control" type="text" name="EmployeeNumber" required /><br />

    <label for="Name">Navn</label><br />
    <input class="form-control" type="text" name="Name" required /><br />

    <label for="Email">E-post</label><br />
    <input class="form-control" type="text" name="Email" required /><br />

    <label for="Password">Passord</label><br />
    <input class="form-control" type="password" name="Password" required /><br />

    <label for="RepeatPassword">Gjenta passord</label><br />
    <input class="form-control" type="password" name="RepeatPassword" required /><br />

    <button type="submit" class="form-control btn btn-dark">Registrer bruker</button>
</form>
<br />
<form asp-action="Login" asp-controller="Home">
    <button type="submit" class="form-control btn btn-danger">Avbryt og gå tilbake</button>
</form>
