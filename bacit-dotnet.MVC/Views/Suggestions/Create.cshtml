@using bacit_dotnet.MVC.Models.Suggestions
@model SuggestionEntity

<form asp-action="addSuggestion" method="post">

    <h1 style="text-align:Center">Skriv inn ditt forbedringsforslag:</h1>


    <li class="list-unstyled">
            <label for="Title">Emne:</label><br />
            <input class="form-control" type="text" name="Title" placeholder="Emne"><br /><br />
        </li>
        <li class="list-unstyled">
            <label for="Team">Avdeling:</label><br />
            <select class="form-control" name="Team">
                <option value="Sales and Market">Salg og Marked</option>
                <option value="Production">Produksjon</option>
                <option value="Technical">Teknisk</option>
                <option value="Logistics">Logistikk</option>
            </select> <br /><br />
        </li>
        <li class="list-unstyled">
            <label for="Category">Kategori:</label><br />
            <select class="form-control" name="Category">
                <option value="Jadajada">Jadajada</option>
                <option value="NeidaNeida">Neidaneida</option>
                <option value="OkOk">OkOk</option>
                <option value="Blabla">BlaBla</option>
            </select> <br /><br />
        </li>
        <li class="list-unstyled">
            <label for="Deadline">Frist:</label><br />
            <input class="form-control" type="date" name="Deadline" /> <br /><br />
        </li>
        <li class="list-unstyled">
            <label for="Status">Status:</label><br />
            <input class="form-control" name="Status" type="text">
            <br /><br />
        </li>
        <li class="list-unstyled">
            <label for="Phase">Fase:</label><br />
            <select class="form-control" name="Phase">
                <option value="Plan">Plan</option>
                <option value="Do">Do</option>
                <option value="Study">Study</option>
                <option value="Act">Act</option>
            </select> <br /><br />
        <li class="list-unstyled">
            <label for="Description">Forbedringsforslag:</label><br />
            <textarea class="form-control" id="exampleFormControlTextarea1" name="Description" rows="3"></textarea>
    </li> <br />
        <li class="list-unstyled">
            <input class="btn btn-dark form-control" type="submit" value="Lagre" />
        </li>
    
</form>
<br />
<form asp-action="Index">
    <input type="submit" class="form-control btn btn-danger" value="Avbryt og gå tilbake" />
</form>
