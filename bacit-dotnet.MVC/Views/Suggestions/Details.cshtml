@using bacit_dotnet.MVC.Models.Suggestions
@model SuggestionEntity


<div class="align-content-center">
    <div class="inspiserForslag">
        <h1>Inspiser Forslag</h1>
    </div>



    <div class="container text-center">
        <dl class="row">
            <div class="row">
                <dt class="col">
                    <h10>Emne</h10>
                </dt>
                <dd class="col">
                    <div class="form-control">@Html.DisplayFor(model => model.Title)</div>
                </dd>

                <dt class="col">
                    <h10>Forslag skrevet av:</h10>
                </dt>
                <dd class="col">
                    <div class="form-control">@Html.DisplayFor(model => model.SuggestionMakerID)</div>
                </dd>
            </div>

            <div class="row">
                <dt class="col">
                    <h10>Kategori</h10>
                </dt>
                <dd class="col">
                    <div class="form-control">@Html.DisplayFor(model => model.Category)</div>
                </dd>

                <dt class="col">
                    <h10>Avdeling</h10>
                </dt>
                <dd class="col">
                    <div class="form-control">@Html.DisplayFor(model => model.Team)</div>
                </dd>
            </div>

            <div class="row">
                <dt class="col">
                    <h10>Status</h10>
                </dt>
                <dd class="col">
                    <div class="form-control">@Html.DisplayFor(model => model.Status)</div>
                </dd>

                <dt class="col">
                    <h10>Fase</h10>
                </dt>
                <dd class="col">
                    <div class="form-control">@Html.DisplayFor(model => model.Phase)</div>
                </dd>
            </div>

            <div class="row">
                    <dt class="col">
                        <h10>Tidsstempel</h10>
                         <br /> 
                        <div class="form-control">@Html.DisplayFor(model => model.TimeStamp)</div>
                    </dt>

                    <dt class="col">
                        <h10>Frist</h10>
                    </dt>
                    <dd class="col">
                        <div class="form-control">@Html.DisplayFor(model => model.Deadline)</div>
                    </dd>
            </div>

            <div>
                <dt class="col">
                    <h10>Beskrivelse</h10>
                </dt>

                <dd class="col">
                    <div class="form-control">@Html.DisplayFor(model => model.Description)</div>
                </dd>
            </div>
        </dl>
    </div>
</div>